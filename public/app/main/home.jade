.container
	.navbar.navbar-default
		button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse")
			span(class="icon-bar")
			span(class="icon-bar")
			span(class="icon-bar")
		span.navbar-brand.glyphicon.glyphicon-hand-right
		.navbar-collapse.collapse.navbar-inverse-collapse
			form.navbar-form.navbar-left
				input(type="text" class="form-control col-lg-8 input-large" placeholder="Търси")
			ul.nav.navbar-nav.navbar-right
				li
					a(href="#/login") Портал за библиотекари

	table.table.table-striped
		thead
			tr.active
				th #
				th Заглавие
				th Автор
				th Подзаглавие
				th Взета
				th Дата на връщане
		tbody(ng-repeat="book in books")
			td {{book.id}}
			td {{book.name}}
			td {{book.author}}
			td {{book.subName}}
			td
				input(type="checkbox" disabled="disabled")
			td {{book.returnDate | date: 'MMM d'}}

