.container
	.navbar.navbar-default
		button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse")
			span.icon-bar
			span.icon-bar
			span.icon-bar
		span.navbar-brand.glyphicon.glyphicon-hand-right
		div(class="navbar-collapse collapse navbar-inverse-collapse")
				ul(class="nav navbar-nav navbar-left")
					li
						a(href="#/") Библиотека
				ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
					li.dropdown
						a.dropdown-toggle(href="" data-toggle="dropdown") {{identity.currentUser.firstName+" "+identity.currentUser.lastName}}
							span.caret
						ul.dropdown-menu
							li(ng-show="identity.currentUser.isAdmin()")
								a(href="#/admin/signup") Add user
							li(ng-show="identity.currentUser.isAdmin()")
								a(href="#/admin/users") Users
							li(ng-show="identity.isAuthenticated()")
								a(href="#/profile") Профил
							li
								a(href="#" ng-click="logout()") Изход
	form.form-horizontal(name='profileForm' ng-controller="ProfileController")
		.well
			fieldset
				legend Профил
				.form-group
					label.col-lg-2.control-label(for='first-name') Име
					.col-lg-10
						input.form-control(placeholder="Име", type="text", ng-model="user.firstName", required)
				.form-group
					label.col-lg-2.control-label(for='last-name') Фамилия
					.col-lg-10
						input.form-control(placeholder="Фамилия", type="text", ng-model="user.lastName", required)
				.form-group
					label.col-lg-2.control-label(for='password') Парола
					.col-lg-10
						input.form-control(placeholder="Парола", type="Password", ng-model="user.password")
				.form-group
					.col-lg-10.col-lg-offset-2
						button.btn.btn-success(ng-disabled="profileForm.$invalid", ng-click="update(user)") Обнови
						a.btn-sm.btn-success(href="#/") Отказ