.container(ng-controller="loginController")
	.navbar.navbar-default
		button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse")
			span.icon-bar
			span.icon-bar
			span.icon-bar
		span.navbar-brand.glyphicon.glyphicon-hand-right
		div(class="navbar-collapse collapse navbar-inverse-collapse")
				ul(class="nav navbar-nav navbar-left")
					li
						a(href="#/") Библиотека
				ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
					li.dropdown
						a.dropdown-toggle(href="" data-toggle="dropdown") {{identity.currentUser.firstName+" "+identity.currentUser.lastName}}
							span.caret
						ul.dropdown-menu
							li(ng-show="identity.currentUser.isAdmin()")
								a(href="#/admin/signup") Add user
							li(ng-show="identity.currentUser.isAdmin()")
								a(href="#/admin/users") Users
							li(ng-show="identity.isAuthenticated()")
								a(href="#/profile") Профил
							li(ng-show="identity.isAuthenticated()")
								a(href="#/admin/edit-book") Библиотекарски инструменти
							li(ng-show="identity.isAuthenticated()")
								a(href="#/admin/add-book") Добави книга
							li
								a(href="#" ng-click="logout()") Изход

	form.form-horizontal(name='addBookForm')
		.well
			fieldset
				legend Добави книга
				.form-group
					label.col-lg-2.control-label(for='title') Заглавие
					.col-lg-10
						input.form-control(placeholder="Заглавие", type="text", ng-model="book.title", required)
				.form-group
					label.col-lg-2.control-label(for='last-name') Автор
					.col-lg-10
						input.form-control(placeholder="Автор", type="text", ng-model="book.author", required)
				.form-group
					label.col-lg-2.control-label(for='subTitle') Подзаглавие
					.col-lg-10
						input.form-control(placeholder="Подзаглавие", type="text", ng-model="book.subTitle", required)
				.form-group
					label.col-lg-2.control-label(for='inventoryNum') Инвентарен №
					.col-lg-10
						input.form-control(placeholder="Инвентарен №", type="text", ng-model="book.inventoryNum", required)
				.form-group
					label.col-lg-2.control-label(for='shelf') Рафт
					.col-lg-10
						input.form-control(placeholder="Рафт", type="text", ng-model="book.shelf", required)
				.form-group
					.col-lg-10.col-lg-offset-2
						button.btn.btn-success(ng-disabled="addBookForm.$invalid", ng-click="addBook(book)") Запази
						a.btn-sm.btn-success(href="#/") Отказ