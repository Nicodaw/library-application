.container(ng-controller="loginController")
	.navbar.navbar-default
		button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse")
			span.icon-bar
			span.icon-bar
			span.icon-bar
		span.navbar-brand.glyphicon.glyphicon-hand-right
		div(class="navbar-collapse collapse navbar-inverse-collapse")
				ul(class="nav navbar-nav navbar-left")
					li
						a(href="#/") Библиотека
				ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
					li.dropdown
						a.dropdown-toggle(href="" data-toggle="dropdown") {{identity.currentUser.firstName+" "+identity.currentUser.lastName}}
							span.caret
						ul.dropdown-menu
							li(ng-show="identity.currentUser.isAdmin()")
								a(href="#/admin/signup") Add user
							li(ng-show="identity.currentUser.isAdmin()")
								a(href="#/admin/users") Users
							li(ng-show="identity.isAuthenticated()")
								a(href="#/profile") Профил
							li(ng-show="identity.isAuthenticated()")
								a(href="#/admin/edit-book") Библиотекарски инструменти
							li(ng-show="identity.isAuthenticated()")
								a(href="#/admin/add-book") Добави книга
							li
								a(href="#" ng-click="logout()") Изход
	form.form-horizontal(name='editbookForm')
		.well
			fieldset
				legend {{book.title}}
				.form-group
					label.col-lg-2.control-label(for='title') Заглавие
					.col-lg-10
						input.form-control(placeholder="Заглавие", type="text", ng-model="book.title", required)
				.form-group
					label.col-lg-2.control-label(for='author') Фамилия
					.col-lg-10
						input.form-control(placeholder="Фамилия", type="text", ng-model="book.author", required)
				.form-group
					label.col-lg-2.control-label(for='subTitle') Подзаглавие
					.col-lg-10
						input.form-control(placeholder="Подзаглавие", type="text", ng-model="book.subTitle")
				.form-group
					label.col-lg-2.control-label(for='taken') Взета
					.col-lg-10.checkbox-inline.taken-check
						input(type="checkbox", ng-model="book.taken")
				.form-group
					label.col-lg-2.control-label(for='inventoryNum') Инвентарен №
					.col-lg-10
						input.form-control(placeholder="Инвентарен №", type="text", ng-model="book.inventoryNum")
				.form-group
					label.col-lg-2.control-label(for='isFormated') Обработена
					.col-lg-10.checkbox-inline.taken-check
						input(type="checkbox", ng-model="book.isFormated")
				.form-group
					label.col-lg-2.control-label(for='shelf') Рафт
					.col-lg-10
						input.form-control(placeholder="Рафт", type="text", ng-model="book.shelf")
				.form-group
					label.col-lg-2.control-label(for='signature') Сигнатура
					.col-lg-10
						input.form-control(placeholder="Сигнатура", type="text", ng-model="book.signature")
				.form-group
					label.col-lg-2.control-label(for='Year') Година
					.col-lg-10
						input.form-control(placeholder="Година", type="text", ng-model="book.year")
				.form-group
					label.col-lg-2.control-label(for='subAuthor') Съавтори
					.col-lg-10
						input.form-control(placeholder="Съавтори", type="text", ng-model="book.subAuthor")
				.form-group
					label.col-lg-2.control-label(for='price') Цена
					.col-lg-10
						input.form-control(placeholder="Цена", type="text", ng-model="book.price")
				.form-group
					label.col-lg-2.control-label(for='genre') Тематика
					.col-lg-10
						input.form-control(placeholder="Тематика", type="text", ng-model="book.genre")			
				.form-group
					.col-lg-10.col-lg-offset-2
						button.btn.btn-success(ng-disabled="editbookForm.$invalid", ng-click="update(book)") Обнови
						a.btn-sm.btn-success(href="#/") Отказ